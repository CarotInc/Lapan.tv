
<div class="main-content">
  <div class="row">
    <div class="content-area">
      <div class="pure-g">
        <div class="pure-u-2-3">
          <div class = "mainText">
            <h1 class="title" ><%= @posts.title %></h1>
          </div>
          <div class = "subText">
            <%= simple_format(@posts.text) %>
          </div>
        </div>
        <div class="pure-u-1-3">
          <div>
            <button id = "modal-open">♡お気に入り</button>
          </div>
          <div id = "modal-main">
            <%= image_tag("lapan.png") %>
            <h3>動画をアプリやInstagramで見よう！</h3>
          </div>
          <div>
            カテゴリー：<% @posts.tag_list.each do |tag| %>
            <span class="label label-primary"><%= link_to tag, { :action => :tag, :name => tag}%></span>
            <% end %>
          </div>
        </div>
      </div>
      <div class = "video">
        <blockquote class="instagram-media" data-instgrm-captioned data-instgrm-version="5" style=" background:#FFF; border:0; border-radius:3px; box-shadow:0 0 1px 0 rgba(0,0,0,0.5),0 1px 10px 0 rgba(0,0,0,0.15); margin: 1px; max-width:1000px; padding:0; width:99.375%; width:-webkit-calc(100% - 2px); width:calc(100% - 2px);">

          <%= link_to "", @posts.video, {:target => "_brank"} %>
        </blockquote>
        <script async defer src="//platform.instagram.com/en_US/embeds.js"></script>
      </div>
    </div><!--/.content-area--><!--/.content-area-->
  </div>
  <div class="pure-g maincontents">
    <div class="pure-u-2-3">
      <div class="title">
        <%= simple_format(@posts.title1) %>
      </div>
      <div class="make_border"></div>
      <div>
        <img src=<%= @posts.image1 %>>
      </div>
      <div>
        <%= simple_format(@posts.contents1) %>
      </div>
      <div class="title">
        <%= simple_format(@posts.title2) %>
      </div>
      <div class="make_border"></div>
      <div>
        <img src=<%= @posts.image2 %>>
      </div>
      <div>
        <%= simple_format(@posts.contents2) %>
      </div>
      <div class="title">
        <%= simple_format(@posts.title3) %>
      </div>
      <div class="make_border"></div>
      <div>
        <img src=<%= @posts.image3 %>>
      </div>
      <div>
        <%= simple_format(@posts.contents3) %>
      </div>
      <div class="title">
        <%= simple_format(@posts.title4) %>
      </div>
      <div class="make_border"></div>
      <div>
        <img src=<%= @posts.image4 %>>
      </div>
      <div>
        <%= simple_format(@posts.contents4) %>
      </div>
    </div>
      <div class="pure-u-1-3">
        <div class = "subvideo">
          <iframe src=<%= @posts.video %> width="600" height="600" frameborder="0" scrolling="no" autostart="1"></iframe>
        </div>

    </div>
  </div>

  <div class="pure-g">
    <div>
      <p>同じタグ</p>
    </div>
    <div>
      <%= render 'posts/related_posts', posts: @posts.find_related_tags %>
    </div>
  </div>

</div>