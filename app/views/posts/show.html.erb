
<div class="container2 main-content">
  <div class="row">
    <div class="col-md-9 content-area">
      <div class = "mainText">
        <%= @posts.title %>
   <div>
     <video id ="video" autoplay controls loop> <source src=<%= @posts.video %> ></video>
   </div>
      </div>
      <div class = "subText">
        <%= simple_format(@posts.text) %>
      </div>
        <button id = "modal-open">♡お気に入り</button>
      <div id = "modal-main">
        <%= image_tag("lapan.png") %>
        <h3>動画をアプリやInstagramで見よう！</h3>
      </div>
      <div class="main_contents">
        <%= simple_format(@posts.contents) %>
      </div>
      <div>
        カテゴリー：<% @posts.tag_list.each do |tag| %>
  <span class="label label-primary"><%= tag %></span>
<% end %>
      </div>
    </div><!--/.content-area--><!--/.content-area-->
  </div>
</div>
