<div class="tag__top__image" style="background: url(<%= "/" + @tag + ".png" %>)center center repeat; background-size:cover;">
  <img src=<%= "/" + @tag + "_logo.png" %> alt="" class = "tag__image__image">
</div>
<% if @post.count == 0  %>
  <div><h2>見つかりませんでした。</h2></div>
<% else %>
<div class=""><h2 class="border__bottom osusume">オススメのお店</h2>
<div class="pure-g">
  <div class="">
    <% @post.each do |result| %>
    <%= link_to "/#{result.id}/lapan" do %>
      <span class="pure-u-1-2 tag__post">
        <div class = "squareImage">
          <img src=<%= result.image %> alt=<%= result.name + "の" + result.title %> class = "home__post__image">
        </div>
        <div class = "home__post__title">
          <%= result.title  %>
        </div>
        <div class="post__list__station">
          <i class="fa fa-map-marker" aria-hidden="true" id = "red"></i><%= result.station %>
        </div>
      </span>
    <%end%>
    <% end %>
  </div>
</div>
</div>
<div>
  <h2 class="border__bottom osusume">これもいかが？</h2>
  <div class="pure-g">
    <div class="">
    </div>
  </div>
</div>
<% end %>