<% tag_list.each do |tag| %>
  <%= link_to ({:action => :tag, :name => tag}) do%>
    <div class="tag pure-u-1-3">
      <div>
          <img src=<%= tag + ".png" %> alt="" class = "tag__image">
      </div>
      <div class="tag__name">
        <%= tag %>
      </div>
    </div>
  <% end %>
<% end %>